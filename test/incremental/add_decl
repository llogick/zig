#update=initial version
#file=main.zig
const std = @import("std");
pub fn main() !void {
    try std.Io.File.stdout().writeStreamingAll(io, foo);
}
const foo = "good morning\n";
const io = std.Io.Threaded.global_single_threaded.ioBasic();
#expect_stdout="good morning\n"

